
        <div class="row">
          <div class="col-lg-12">
            <%= render 'detail_kasbons/form' %>
          </div>
        </div><br>
 
        <div class="row">
          <div class="col-lg-12">
            <div class="table-responsive">
              <table class="table table-bordered table-hover table-condensed">
                <thead>
                  <tr>
                    <th>Tanggal Pembayaran</th>
                    <th>Jumlah Pembayaran</th>
                    <th>Sisa</th>
                    <th colspan="3">Actions</th>
                  </tr>
                </thead>
        
                <tbody>
                    <% @details.each do |detail_kasbon| %>
                    <tr>
                        <td><%= detail_kasbon.tanggal_bayar.strftime("%B %Y") %></td>
                        <td><%= delimiter(detail_kasbon.jumlah_bayar) %></td>
                        <td><%= delimiter(detail_kasbon.sisa)%></td>
                        <td>
                        <%= link_to  detail_kasbon, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' do %>
                          <i class="glyphicon glyphicon-trash"></i>
                        <% end %>
                        </td>
                    </tr>
                    <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>

