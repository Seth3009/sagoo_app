<div class="container">
  <nav class="navbar navbar-inverse">
    <p class="navbar-title">Kasbon Karyawan</p>
  </nav>
</div><br>
<div class="container">
  <div class="well">
    <div class="row">
      <div class="col-lg-12">
          
          <div class="row">
            <%= link_to 'Tambah Kasbon', new_kasbon_path, class: 'btn btn-primary pull-right' %>
          </div><br>
          <div class="row">
            <div class="table-responsive">
              <table class="table table-bordered table-hover table-condensed">
                <thead>
                  <tr>
                    <th>Karyawan</th>
                    <th>Keterangan</th>
                    <th>Tanggal Peminjaman</th>
                    <th>Jumlah Peminjaman</th>
                    <th>Pembayaran Terakhir</th>
                    <th>Total Pembayaran</th>
                    <th>Sisa</th>
                    <th colspan="3">Actions</th>
                  </tr>
                </thead>
              
                <tbody>
                  <% @kasbons.each do |kasbon| %>
                    <tr>
                      <td><%= kasbon.employee.name %></td>
                      <td><%= kasbon.nama %></td>
                      <td><%= kasbon.tanggal_pinjam.strftime("%d %b %Y") %></td>
                      <td><%= delimiter(kasbon.jumlah_pinjam) %></td>
                      <td><%= kasbon.tanggal_bayar.empty? ? "--" : Date.parse(kasbon.tanggal_bayar.to_s).strftime("%d %b %Y") %></td>
                      <td><%= kasbon.jumlah_bayar.nil? ? 0 : delimiter(kasbon.jumlah_bayar) %></td>
                      <td><%= kasbon.sisa.nil? ? delimiter(kasbon.jumlah_pinjam) : delimiter(kasbon.sisa) %></td>
                      <td align="center", width="15%">
                        <%= link_to kasbon, class: 'btn btn-info' do %>
                          <i class="glyphicon glyphicon-eye-open"></i>
                        <% end %>
                        <% if kasbon.jumlah_bayar == 0 %>
                          <%= link_to kasbon, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' do %>
                            <i class="glyphicon glyphicon-trash"></i>
                          <% end %>
                        <% end %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
       </div>
    </div>
  </div>
</div>