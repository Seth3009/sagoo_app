<p id="notice"><%= notice %></p>

<h1>Listing Kasbons</h1>

<table>
  <thead>
    <tr>
      <th>Nama</th>
      <th>Tanggal pinjam</th>
      <th>Jumlah pinjam</th>
      <th>Tanggal bayar</th>
      <th>Jumlah bayar</th>
      <th>Sisa</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kasbons.each do |kasbon| %>
      <tr>
        <td><%= kasbon.nama %></td>
        <td><%= kasbon.tanggal_pinjam %></td>
        <td><%= kasbon.jumlah_pinjam %></td>
        <td><%= kasbon.tanggal_bayar %></td>
        <td><%= kasbon.jumlah_bayar %></td>
        <td><%= kasbon.sisa %></td>
        <td><%= link_to 'Show', kasbon %></td>
        <td><%= link_to 'Edit', edit_kasbon_path(kasbon) %></td>
        <td><%= link_to 'Destroy', kasbon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

