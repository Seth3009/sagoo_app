
<div class="container">
  <nav class="navbar navbar-inverse">
    <p class="navbar-title">Posisi Karyawan</p>
  </nav>
</div><br>
<div class="container">
  <div class="well">
    <div class="row">
      <div class="col-lg-12">
          <div class="row">
            <%= link_to 'Tambah Posisi', new_position_group_path, class: 'btn btn-primary pull-right' %>
          </div><br>
          <div class="row">
            <div class="table-responsive">
              <table class="table table-bordered table-hover table-condensed">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Note</th>
                    <th>Group</th>
                    <th colspan="3"></th>
                  </tr>
                </thead>
              
                <tbody>
                  <% @position_groups.each do |position_group| %>
                    <tr>
                      <td><%= position_group.name %></td>
                      <td><%= position_group.note %></td>
                      <td><%= position_group.golongan.nama %></td>
                      <td align="center", width="15%">
                        <%= link_to  position_group  , class: 'btn btn-info' do %>
                          <i class="glyphicon glyphicon-eye-open"></i>
                        <% end %>
                        <%= link_to edit_position_group_path(position_group), class: 'btn btn-success' do%>
                          <i class="glyphicon glyphicon-edit"></i>
                        <% end %>
                        <%= link_to  position_group, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' do %>
                          <i class="glyphicon glyphicon-trash"></i>
                        <% end %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
       </div>
    </div>
  </div>
</div>




