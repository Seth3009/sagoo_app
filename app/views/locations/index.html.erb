<div class="container">
  <nav class="navbar navbar-inverse">
    <p class="navbar-title">Lokasi Resto</p>
  </nav>
</div><br>
<div class="container">
  <div class="well">
    <div class="row">
      <div class="col-lg-12">
        <div class="row">
          <%= link_to 'Tambah Lokasi', new_location_path, class: 'btn btn-primary pull-right' %>
        </div><br>
        <div class="row">
          <div class="table-responsive">
            <table class="table table-bordered table-hover table-condensed">
              <thead>
                <tr>
                  <th>Lokasi</th>
                  <th>Alamat</th>
                  <th>Phone</th>
                  <th colspan="3">Actions</th>
                </tr>
              </thead>
            
              <tbody>
                <% @locations.each do |location| %>
                  <tr>
                    <td><%= location.name %></td>
                    <td><%= location.address %></td>
                    <td><%= location.phone %></td>
                    <td align="center", width="15%">
                        <%= link_to  location  , class: 'btn btn-info' do %>
                          <i class="glyphicon glyphicon-eye-open"></i>
                        <% end %>
                        <%= link_to edit_location_path(location), class: 'btn btn-success' do%>
                          <i class="glyphicon glyphicon-edit"></i>
                        <% end %>
                        <%= link_to  location, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' do %>
                          <i class="glyphicon glyphicon-trash"></i>
                        <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
             </table>
            </div>
          </div>
       </div>
    </div>
  </div>
</div>