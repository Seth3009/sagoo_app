
<div class="container">
  <nav class="navbar navbar-inverse">
    <p class="navbar-title">Pinjaman Karyawan</p>
  </nav>
</div><br>
<div class="container">
  <div class="well">
    <div class="row">
      <div class="col-lg-12">
          
          <div class="row">
            <%= link_to 'Tambah Pinjaman', new_employee_path, class: 'btn btn-primary pull-right' %>
          </div><br>
          <div class="row">
            <div class="table-responsive">
              <table class="table table-bordered table-hover table-condensed">
                <thead>
                  <tr>
                    <th>Keterangan</th>
                    <th>Tanggal Pinjaman</th>
                    <th>Jumlah Pinjaman</th>
                    <th>Tanggal Bayar Terakhir</th>
                    <th>Jumlah Bayar Terakhir</th>
                    <th>Sisa</th>
                    <th colspan="3">Actions</th>
                  </tr>
                </thead>
              
                <tbody>
                  <% @kasbons.each do |kasbon| %>
                    <tr>
                      <td><%= kasbon.nama %></td>
                      <td><%= kasbon.tanggal_pinjam %></td>
                      <td><%= delimiter(kasbon.jumlah_pinjam) %></td>
                      <td><%= kasbon.tanggal_bayar %></td>
                      <td><%= delimiter(kasbon.jumlah_bayar) %></td>
                      <td><%= delimiter(kasbon.sisa) %></td>
                      <td>
                        <%= link_to  kasbon, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' do %>
                          <i class="glyphicon glyphicon-trash"></i>
                        <% end %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
       </div>
    </div>
  </div>
</div>