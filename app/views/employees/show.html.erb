<div class="container">
  <nav class="navbar navbar-inverse">
    <p class="navbar-title"><%= @employee.name %></p>
  </nav>
</div><br>
<div class="container">
  <div class="well">
    <div class="row">
      <div class="col-lg-12">

        <p>
          <strong>Name:</strong>
          <%= best_in_place @employee, :name %>
        </p>
        
        <p>
          <strong>Phone:</strong>
          <%= @employee.phone %>
        </p>
        
        <p>
          <strong>Email:</strong>
          <%= @employee.email %>
        </p>
        
        <p>
          <strong>Acc no:</strong>
          <%= @employee.acc_no %>
        </p>
        
        <p>
          <strong>Pob:</strong>
          <%= @employee.pob %>
        </p>
        
        <p>
          <strong>Dob:</strong>
          <%= @employee.dob %>
        </p>
        
        <p>
          <strong>Work started:</strong>
          <%= @employee.work_started %>
        </p>
        
        <p>
          <strong>Work end:</strong>
          <%= @employee.work_end %>
        </p>
        
        <%= link_to 'Edit', edit_employee_path(@employee) %> |
        <%= link_to 'Back', employees_path %>
       </div>
    </div>
  </div>
</div>