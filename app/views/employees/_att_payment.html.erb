
<div class="container">
  <nav class="navbar navbar-inverse">
    <p class="navbar-title">Data absensi</p>
    <p class="navbar-title pull-right" style="margin-right: 20px;">Rp. <%= delimiter(@total.total) %></p>
  </nav>
</div><br>
<div class="container">
  <div class="well">
    <div class="row">
      <div class="col-lg-12">
          
         
          <div class="row">
            <div class="table-responsive">
              <table class="table table-bordered table-hover table-condensed">
                <thead>
                  <tr>
                    <th>Hari Kerja</th>
                    <th>Nilai</th>
                    <th>Jumlah Hari</th>
                    <th>Total</th>
                  </tr>
                </thead>
              
                <tbody>
                  <% @atts.each do |attendance| %>
                    <tr>
                      <td>
                          <%= attendance.group_roster.roster.hari %>
                          <%= attendance.group_roster.roster.detail %>
                      </td>
                      <td><%= delimiter(attendance.group_roster.amount) %></td>
                      <td><%= best_in_place attendance, :day_count %></td>
                      <td><%= delimiter(attendance.day_count * attendance.group_roster.amount) %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
       </div>
    </div>
  </div>
</div>