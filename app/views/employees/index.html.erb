
<div class="container">
  <nav class="navbar navbar-inverse">
    <p class="navbar-title">Employees Listing</p>
  </nav>
</div><br>
<div class="container">
  <div class="well">
    <div class="row">
      <div class="col-lg-12">
          
          <div class="row">
            <%= link_to 'Tambah Karyawan', new_employee_path, class: 'btn btn-primary pull-right' %>
          </div><br>
          <div class="row">
            <div class="table-responsive">
              <table class="table table-bordered table-hover table-condensed">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>Acc no</th>
                    <th>Pob</th>
                    <th>Dob</th>
                    <th>Work started</th>
                    <th>Work end</th>
                    <th colspan="3">Actions</th>
                  </tr>
                </thead>
              
                <tbody>
                  <% @employees.each do |employee| %>
                    <tr>
                      <td><%= employee.name %></td>
                      <td><%= employee.phone %></td>
                      <td><%= employee.email %></td>
                      <td><%= employee.acc_no %></td>
                      <td><%= employee.pob %></td>
                      <td><%= employee.dob %></td>
                      <td><%= employee.work_started %></td>
                      <td><%= employee.work_end %></td>
                      <td align="center", width="15%">
                        <%= link_to  employee  , class: 'btn btn-info' do %>
                          <i class="glyphicon glyphicon-eye-open"></i>
                        <% end %>
                        <%= link_to edit_employee_path(employee), class: 'btn btn-success' do%>
                          <i class="glyphicon glyphicon-edit"></i>
                        <% end %>
                        <%= link_to  employee, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' do %>
                          <i class="glyphicon glyphicon-trash"></i>
                        <% end %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
       </div>
    </div>
  </div>
</div>

