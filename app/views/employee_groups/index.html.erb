<div class="container">
  <nav class="navbar navbar-inverse">
    <p class="navbar-title">Golongan Karyawan</p>
  </nav>
</div><br>
<div class="container">
  <div class="well">
    <div class="row">
      <div class="col-lg-12">
        <div class="row">
          <%= link_to 'Tambah Golongan', new_employee_group_path, class: 'btn btn-primary' %>
        </div><br>
        <div class="row">
          <div class="table-responsive">
            <table class="table table-bordered table-hover table-condensed">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Salary</th>
                  <th>Rosters</th>
                  <th>Note</th>
                  <th>Actions</th>
                </tr>
              </thead>
            
              <tbody>
                <% @employee_groups.each do |employee_group| %>
                  <tr>
                    <td><%= employee_group.name %></td>
                    <td><%= delimiter(employee_group.salary) %></td>
                    <td><%= link_to pluralize(employee_group.rosters.count, "roster"), roster_group_path(employee_group) %></td>
                    <td><%= employee_group.note %></td>
                    <td align="center", width="15%">
                        <%= link_to  employee_group  , class: 'btn btn-info' do %>
                          <i class="glyphicon glyphicon-eye-open"></i>
                        <% end %>
                        <%= link_to edit_employee_group_path(employee_group), class: 'btn btn-success' do%>
                          <i class="glyphicon glyphicon-edit"></i>
                        <% end %>
                        <%= link_to  employee_group, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' do %>
                          <i class="glyphicon glyphicon-trash"></i>
                        <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
           </div>
          </div>
       </div>
    </div>
  </div>
</div>