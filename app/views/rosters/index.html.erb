<div class="container">
  <nav class="navbar navbar-inverse">
    <p class="navbar-title">Roster List</p>
  </nav>
</div><br>
<div class="container">
  <div class="well">
    <div class="row">
      <div class="col-lg-12">
        <div class="row">
          <div class="col-lg-12">
            <%= link_to 'Tambah Roster', new_roster_path, class: 'btn btn-primary pull-right'%>
          </div>
        </div><br>
        <div class="row">
          <div class="col-lg-12">
            <div class="table-responsive">
              <table class="table table-bordered table-hover table-condensed">
                <thead>
                  <tr>
                    <th>Hari</th>
                    <th>Detail</th>
                    <th>Note</th>
                    <th colspan="3">Actions</th>
                  </tr>
                </thead>
              
                <tbody>
                  <% @rosters.each do |roster| %>
                    <tr>
                      <td><%= roster.hari %></td>
                      <td><%= roster.detail %></td>
                      <td><%= roster.note %></td>
                      <td align="center", width="15%">
                          <%= link_to  roster  , class: 'btn btn-info' do %>
                            <i class="glyphicon glyphicon-eye-open"></i>
                          <% end %>
                          <%= link_to edit_roster_path(roster), class: 'btn btn-success' do%>
                            <i class="glyphicon glyphicon-edit"></i>
                          <% end %>
                          <%= link_to  roster, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' do %>
                            <i class="glyphicon glyphicon-trash"></i>
                          <% end %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>




